<?xml version="1.0" encoding="utf-8"?>
<!-- Login -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginFrame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/login"
    >

    <!-- Logo2 1 -->

    <!-- LoginForm -->
    <View
        android:id="@+id/logo2_1"
        android:layout_width="219dp"
        android:layout_height="219dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo"
        android:foreground="@mipmap/Logo2" />

    <RelativeLayout
        android:id="@+id/loginform"
        android:layout_width="300dp"
        android:layout_height="228dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="369dp"
        android:background="@drawable/loginform"
        android:clipToOutline="true">


        <!-- btnLogin -->

        <!-- LOGIN -->

        <!-- Rectangle 3 -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="@color/azul_oscuro"
            android:text="LOGIN"
            app:cornerRadius="10dp"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- btnRegister -->
        <TextView
            android:id="@+id/login"
            android:layout_width="105dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="128dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/login"
            android:textAppearance="@style/login" />


        <!-- REGISTER -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="165dp"
            android:backgroundTint="@color/azul_oscuro"
            android:text="REGISTER"
            app:cornerRadius="10dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/register"
            android:layout_width="105dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="173dp"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/register"
            android:textAppearance="@style/register" />


        <!-- userEntry -->
        <RelativeLayout
            android:id="@+id/userentry"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/userentry"
            android:clipToOutline="true">

            <EditText
                android:id="@+id/userEd"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/userentry"
                android:clipToOutline="true"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <!-- userEntryLogo -->
            <View
                android:id="@+id/userentrylo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/userentrylo"
                android:foreground="@mipmap/user" />

        </RelativeLayout>


        <!-- passwdEntry -->
        <RelativeLayout
            android:id="@+id/passwdentry"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/passwdentry"
            android:clipToOutline="true">

            <!-- passEntryLogo -->

            <EditText
                android:id="@+id/passwdEd"
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:layout_marginLeft="49dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/passwdentry"
                android:clipToOutline="true"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <View
                android:id="@+id/passentrylo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/passentrylo"
                android:foreground="@mipmap/padlock" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>



